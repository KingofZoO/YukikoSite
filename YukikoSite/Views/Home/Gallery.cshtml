@model IEnumerable<GalleryItem>

@{
    ViewData["Title"] = "Галерея";
}

<div class="second-info">
    <h1 class="others-title">Галерея</h1>
</div>
<div class="items-container-content">
    @foreach (var item in Model) {
        <div class="item-content gallery-item">
            <table class="item-table">
                <tr>
                    <td>
                        <img src="~/images/gallery/@item.ImagePath"
                             onclick="enlargeImg(this)" />
                    </td>
                </tr>
                <tr>
                    <td class="item-desc">
                        @item.Description
                    </td>
                </tr>
            </table>
        </div>
    }
</div>
<script>
    const sampleImg = document.getElementsByTagName("img")[0];
    const sampleStyle = sampleImg.style;
    var currImg;
    function enlargeImg(img) {
        if (isMobile())
            return;

        if (currImg === img) {
            img.style = sampleStyle;
            currImg = undefined;
        }
        else {
            if (currImg != undefined)
                currImg.style = sampleStyle;

            img.style.position = "fixed";
            img.style.top = "50%";
            img.style.left = "50%";
            img.style.transform = "translate(-50%, -50%)";
            img.style.width = "60%";
            currImg = img;
        }
    }
    function isMobile() {
        return screen.width * 0.6 < sampleImg.width;
    }
</script>