@model IEnumerable<Fibro16Item>

@{
    ViewData["Title"] = "Фибро (16мм)";
}

<div class="a-button-wrapper">
    <a href="/choosecontent">К выбору категории</a>
</div>
<div class="a-button-wrapper">
    <a href="/changefibros16">Добавить фибро (16мм)</a>
</div>
<div class="items-container-content">
    @foreach (var item in Model) {
        <div class="item-content">
            <div class="siding-item">
                <div class="item-title">
                    @if (item.LinkPath == null) {
                        @item.Title
                    }
                    else {
                        <a href="@item.LinkPath">@item.Title</a>
                    }
                </div>
                <table class="item-table">
                    <tr>
                        <td>
                            <img src="~/images/fibros16/@item.ImagePath" />
                        </td>
                    </tr>
                    <tr>
                        <td class="item-desc">
                            @item.Description
                        </td>
                    </tr>
                </table>
            </div>
            <div class="a-button-wrapper">
                <a href="/changefibros16?id=@item.Id">Изменить</a>
            </div>
            <div class="a-button-wrapper">
                <a href="/deletefibros16?id=@item.Id">Удалить</a>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("Partials/PaginatorPartial", new PaginatorViewModel(ViewBag.pageSize, ViewBag.currentPage, ViewBag.totalCount, ViewBag.mapPath))