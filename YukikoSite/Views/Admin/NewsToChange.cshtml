@model IEnumerable<NewsItem>

@{
    ViewData["Title"] = "Новости";
}

<div class="a-button-wrapper">
    <a href="/choosecontent">К выбору категории</a>
</div>
<div class="a-button-wrapper">
    <a href="/changenews">Добавить новость</a>
</div>
<div class="items-container-content">
    @foreach (var item in Model) {
        <div class="item-content">
            <div class="item-content news-item">
                <div class="item-title">@item.Title</div>
                <div class="news-image-block">
                    <img src="~/images/news/@item.Id/@item.TitleImagePath" />
                </div>
                <div class="news-desc">
                    @item.Description
                </div>
            </div>
            <div class="a-button-wrapper">
                <a href="/changenews?id=@item.Id">Изменить</a>
            </div>
            <div class="a-button-wrapper">
                <a href="/deletenews?id=@item.Id">Удалить</a>
            </div>
        </div>
    }
</div>
@await Html.PartialAsync("Partials/PaginatorPartial", new PaginatorViewModel(ViewBag.pageSize, ViewBag.currentPage, ViewBag.totalCount, ViewBag.mapPath))